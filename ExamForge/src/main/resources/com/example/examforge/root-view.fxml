              <GridPane hgap="10">
                  <ImageView GridPane.rowIndex="0" GridPane.columnIndex="0">
                      <image>
                          <Image url="@assets/root/icons8-connection-18.png"/>
                      </image>
                  </ImageView>
                  <Label fx:id="connectionLabel" text="Server status" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
