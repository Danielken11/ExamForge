                  <padding>
                      <Insets left="20"/>
                  </padding>
                  <graphic>
                      <ImageView>
                          <image>
                              <Image url="@assets/root/icons8-hammer-24.png"/>
                          </image>
                      </ImageView>
                  </graphic>
              </Button>
          </HBox>
          <HBox>
              <padding>
                  <Insets top="200"/>
              </padding>
              <Button fx:id="settingsButton" text="SETTINGS" alignment="CENTER_LEFT" onAction="#settingsScene">
                  <padding>
                      <Insets left="20"/>
                  </padding>
                  <graphic>
                      <ImageView>
                          <image>
                              <Image url="@assets/root/settingsIco.png"/>
                          </image>
                      </ImageView>
                  </graphic>
              </Button>
          </HBox>
      </VBox>
  </left>
