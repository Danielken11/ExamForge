<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.Pane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.examforge.RootController" stylesheets="@assets/rootStyle.css">
  <top>
    <HBox fx:id="topBar" prefHeight="28.0" prefWidth="1000">
      <children>
        <StackPane>
          <padding>
            <Insets left="5.0" />
          </padding>
          <children>
            <ImageView>
              <image>
<!--                <Image url="@assets/SilmCursorTopIco.png"/>-->
              </image>
            </ImageView>
          </children>
        </StackPane>
        <StackPane>
          <padding>
            <Insets left="5.0" />
          </padding>
          <children>
            <Label fx:id="appNameLabel" text="ExamForge" />
          </children>
        </StackPane>
        <Region prefHeight="28.0" prefWidth="664.0" HBox.hgrow="ALWAYS" />
        <Pane prefHeight="27" prefWidth="35.0">
          <Button fx:id="minimizeButton" alignment="CENTER_RIGHT" layoutX="4.0" prefHeight="27.0" prefWidth="31.0">
            <graphic>
              <ImageView>
                <image>
                  <Image url="@assets/minimizeImage.png" />
                </image>
              </ImageView>
            </graphic>
          </Button>
          <padding>
            <Insets right="0.0" />
          </padding>
        </Pane>
        <Pane prefHeight="27" prefWidth="35.0">
          <Button fx:id="maximizeButton" alignment="CENTER_RIGHT" layoutX="4.0" prefHeight="27.0" prefWidth="31.0">
            <graphic>
              <ImageView>
                <image>
                  <Image url="@assets/maximizeImage.png" />
                </image>
              </ImageView>
            </graphic>
          </Button>
          <padding>
            <Insets right="0.0" />
          </padding>
        </Pane>
        <Pane prefHeight="27" prefWidth="35.0">
          <Button fx:id="closeButton" alignment="CENTER_RIGHT" layoutX="4.0" prefHeight="27.0" prefWidth="31.0">
            <graphic>
              <ImageView>
                <image>
                  <Image url="@assets/closeImage.png" />
                </image>
              </ImageView>
            </graphic>
          </Button>
          <padding>
            <Insets right="1.0" />
          </padding>
        </Pane>
      </children>
    </HBox>
  </top>


</BorderPane>
